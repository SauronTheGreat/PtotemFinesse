<h1>Listing loans</h1>

<table>
  <tr>
    <th>Round</th>
    <th>Player</th>
    <th>Amount</th>
    <th>Rate</th>
    <th>Start round</th>
    <th>End round</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @loans.each do |loan| %>
  <tr>
    <td><%= loan.round_id %></td>
    <td><%= loan.player_id %></td>
    <td><%= loan.amount %></td>
    <td><%= loan.rate %></td>
    <td><%= loan.start_round_id %></td>
    <td><%= loan.end_round_id %></td>
    <td><%= link_to 'Show', loan %></td>
    <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
    <td><%= link_to 'Destroy', loan, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

