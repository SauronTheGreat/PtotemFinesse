<h1>Listing dealers</h1>

<table cellpadding="3px" cellspacing="3px">
  <tr align="center">
    <th>Name</th>
    <th>Factory</th>
    <th>Consumer catchment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @dealers.each do |dealer| %>
  <tr align="center">
    <td><%= dealer.name %></td>
    <td><%= dealer.factory_id %></td>
    <td><%= dealer.consumer_catchment %></td>
    <td><%= link_to 'Show', dealer %></td>
    <td><%= link_to 'Edit', edit_dealer_path(dealer) %></td>
    <td><%= link_to 'Destroy', dealer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

