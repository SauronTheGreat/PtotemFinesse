<table>
  <tr>
    <th>Name</th>
    <th>Client type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @clients.each do |client| %>
  <tr>
    <td><%= client.name %></td>
    <td><%= client.client_type %></td>
    <td><%= link_to 'Show', client %></td>
    <td><%= link_to 'Edit', edit_client_path(client) %></td>
    <td><%= link_to 'Destroy', client, :confirm => 'Are you sure?', :method => :delete %></td>
     <td><%= link_to 'Add New Facilitator',:controller => :facilitators,:action => "new",:client_id=>client.id%></td>
     <td><%= link_to 'Show All Facilitator',:controller => :facilitators,:action => "index",:client_id=>client.id%></td>
  </tr>
<% end %>
</table>

