<h1>Listing brands</h1>

<table cellpadding="3px" cellspacing="3px">
  <tr>
    <th>Player</th>
    <th>Name</th>
    <th>Product type</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @brands.each do |brand| %>
  <tr align="center">
    <td><%= brand.player_id %></td>
    <td><%= brand.name %></td>
    <td><%= brand.product_type_id %></td>
    <td><%= brand.price %></td>
    <td><%= link_to 'Show', brand %></td>
    <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
    <td><%= link_to 'Destroy', brand, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'Select_channel_incentive', :controller => :selected_channel_incentives, :action => 'new',:brand_id=>brand.id %></td>
    <td><%= link_to 'Select_Media', :controller => :selected_media, :action => 'new',:brand_id=>brand.id %></td>
  </tr>
<% end %>
</table>

